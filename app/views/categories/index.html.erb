<div class="categories-container">
  <h1>Categories</h1>

  <%= flash[:category_success] %>

  <%= link_to "Add Category", new_category_path %>

  <table>
    <thead>
    <th>Name</th>
    </thead>
    <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
