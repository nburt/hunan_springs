<h1>Add Menu Item</h1>

<ul>
  <% @menu_item.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
</ul>

<%= form_for @menu_item do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <%= f.label :price %>
  <%= f.text_field :price %>
  <%= f.label "Size (if Soup)" %>
  <%= f.collection_select :size_id, @sizes, :id, :name, {include_blank: "Please select a soup size..."} %>
  <%= f.label :menu_type %>
  <%= f.collection_select :menu_type_id, @menu_types, :id, :name, {include_blank: "Please select a menu type..."} %>
  <%= f.label :category %>
  <%= f.collection_select :category_id, @categories, :id, :name, {include_blank: "Please select a category..."} %>
  <%= f.submit "Create Menu Item" %>
<% end %>