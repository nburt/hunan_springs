<div class="menu-container">
  <%= @menu_items.each do |menu_item| %>
    <section class="chef-special-container">
      <h3><%= menu_item.category.name %></h3>
      <ul>
        <li><%= menu_item.name %></li>
        <li><%= menu_item.description %></li>
        <li><%= number_to_currency(menu_item.price, unit: "$") %></li>
      </ul>
    </section>
  <% end %>
</div>
