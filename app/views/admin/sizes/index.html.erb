<div class="sizes-container">
  <h1>Sizes</h1>

  <%= flash[:size_success] %>

  <%= link_to "Add Menu Item Size", new_admin_size_path, class: "main-link" %>

  <table>
    <thead>
    <th>Name</th>
    <th></th>
    </thead>
    <tbody>

    <% @sizes.each do |size| %>
      <tr>
        <td><%= size.name %></td>
        <td>
          <%= link_to "Edit", edit_admin_size_path(size), class: "main-button" %>
          <%= link_to "Delete", admin_size_path(size), method: :delete, class: "main-button" %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
