<ul>
  <% @menu_item.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
</ul>

<%= form_for @menu_item, url: url do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <%= f.label :price %>
  <%= f.text_field :price %>
  <%= f.label :menu_type %>
  <%= f.collection_select :menu_type_id, @menu_types, :id, :name, {include_blank: "Please select a menu type..."} %>
  <%= f.label :category %>
  <%= f.collection_select :category_id, @categories, :id, :name, {include_blank: "Please select a category..."} %>
  <%= f.submit button_text %>
<% end %>