<div class="categories-container">
  <h1>Categories</h1>

  <%= flash[:category_success] %>

  <%= link_to "Add Category", new_admin_category_path, class: "main-link" %>

  <table>
    <thead>
    <th>Name</th>
    <th></th>
    </thead>
    <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td>
          <%= link_to "Edit", edit_admin_category_path(category), class: "main-button" %>
          <%= link_to "Delete", admin_category_path(category), method: :delete, class: "main-button" %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
