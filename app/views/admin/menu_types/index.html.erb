<div class="menu-types-container">
  <h1>Menu Types</h1>

  <%= flash[:menu_type_success] %>

  <%= link_to "Add Menu Type", new_admin_menu_type_path, class: "main-link" %>

  <table>
    <thead>
    <th>Name</th>
    <th></th>
    </thead>
    <tbody>

    <% @menu_types.each do |menu_type| %>
      <tr>
        <td><%= menu_type.name %></td>
        <td>
          <%= link_to "Edit", edit_admin_menu_type_path(menu_type), class: "main-button" %>
          <%= link_to "Delete", admin_menu_type_path(menu_type), method: :delete, class: "main-button" %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
